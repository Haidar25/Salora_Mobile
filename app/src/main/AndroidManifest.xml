<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.EAI.Tubes">
    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.EAI.Tubes.DetailBooking"></activity>
        <activity
            android:name="com.EAI.Tubes.HistoryBooking"
            android:label="History Booking">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.EAI.Tubes.MainActivity" />
        </activity>
        <activity
            android:name="com.EAI.Tubes.LoginActivity"
            android:label="@string/title_activity_login" />
        <activity android:name="com.EAI.Tubes.TambahBooking">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.EAI.Tubes.MainActivity" />
        </activity>
        <activity
            android:name="com.EAI.Tubes.ProfilActivity"
            android:label="Profil Anda">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.EAI.Tubes.MainActivity" />
        </activity>
        <activity
            android:name="com.EAI.Tubes.RegisterActivity"
            android:label="Register">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.EAI.Tubes.LoginActivity" />
        </activity>
        <activity
            android:name="com.EAI.Tubes.SplashScreen"
            android:label="@string/app_name"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.EAI.Tubes.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">

            <!-- <intent-filter> -->
            <!-- <action android:name="android.intent.action.MAIN" /> -->


            <!-- <category android:name="android.intent.category.LAUNCHER" /> -->
            <!-- </intent-filter> -->
        </activity>
    </application>

</manifest>